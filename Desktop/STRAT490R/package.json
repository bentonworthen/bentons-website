{
  "name": "reportify",
  "version": "0.9.0",
  "description": "Automated IT & Customer Support Documentation",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "desktop:dev": "npm run dev --workspace=@reportify/desktop",
    "web:dev": "npm run dev --workspace=@reportify/web",
    "api:dev": "npm run dev --workspace=@reportify/api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^1.10.16",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
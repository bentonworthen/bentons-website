{
  "name": "@reportify/desktop",
  "version": "0.9.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "electron:dev": "wait-on dist/main.js && electron dist/main.js --dev",
    "electron:build": "electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.14.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0",
    "typescript": "^5.3.0",
    "@types/ws": "^8.5.0"
  },
  "build": {
    "appId": "com.reportify.desktop",
    "productName": "Reportify",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}